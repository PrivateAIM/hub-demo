{
    "compilerOptions": {
        "sourceMap": true,

        "declaration": true,
        "declarationMap": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "noEmitOnError": true,

        "skipLibCheck": true,

        "esModuleInterop": true,
        "lib": ["ES2020", "DOM"],
        "target": "ES2020",

        "moduleResolution": "Node",
        "module": "CommonJS",
        "strict": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
